<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="Tambah Gardu ?"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:text="Anda yakin ingin menambah pada lokasi ini ?"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="13sp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            style="@style/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_buttoncancel"
            android:drawableLeft="@drawable/kembalilah"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#FFF"
            android:text="Cancel" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            style="@style/btnHapus"
            android:textColor="#FFF"
            android:background="@drawable/bg_button1"
            android:drawableLeft="@drawable/ic_delete"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add"
            style="@style/btnTambah"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Tambah"
            android:background="@drawable/bg_button2"
            android:textColor="#FFF" />

    </LinearLayout>


</LinearLayout>
